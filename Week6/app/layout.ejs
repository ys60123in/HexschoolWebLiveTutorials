        <div class="d-flex align-items-center">
            <a class="menu-cart d-block text-secondary d-md-none" href="#">
                <span class="material-icons h4">shopping_cart</span>
            </a>
            <button class="navbar-toggler outline-0" type="button" data-toggle="collapse" data-target="#navbarMainMenu" aria-controls="navbarMainMenu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon material-icons h1 mb-0 text-secondary">menu</span>
            </button>
        </div>
        <div class="collapse navbar-collapse" id="navbarMainMenu">
            <ul class="navbar-nav w-100 align-items-center justify-content-md-end">
                <li class="nav-item mr-md-4">
                    <a class="nav-link h5 mb-0 py-4" href="products.html">
                        <span class="material-icons h5 align-middle d-none d-md-inline-block">store</span>
                        Product
                    </a>
                </li>
                <li class="nav-item mr-md-4 order-5 order-md-0">
                    <a class="nav-link h5 mb-0 py-4" href="login.html">
                        <span class="material-icons h5 align-middle d-none d-md-inline-block">person</span>
                        <% if (title === "D'PERFUME - 會員資料修改") { %>
                            Mypage
                        <% } else { %>
                            log in
                        <% } %>
                    </a>
                </li>
                <li class="nav-item mr-md-4">
                    <a class="nav-link h5 mb-0 py-4" href="#">
                        <span class="material-icons h5 align-middle d-none d-md-inline-block">favorite</span>
                        Wishlist
                    </a>
                </li>
                <li class="nav-item d-none d-md-block">
                    <a class="nav-link h5 mb-0 py-4" href="#">
                        <span class="material-icons h5 align-middle d-none d-md-inline-block">shopping_cart</span>
                        Cart(3)
                    </a>
                </li>
                <li class="nav-item d-block d-md-none">
                    <a class="nav-link h5 mb-0 py-4" href="#">
                        Blog
                    </a>
                </li>
                <li class="nav-item d-block d-md-none">
                    <a class="nav-link h5 mb-0 py-4" href="#">
                        Contact
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <% if (brands) { %>
        <%- include("layout/brands.ejs"); %>
    <% } %>

    <%- contents %>

    <% if (subscribe) { %>
        <%- include("layout/subscribe.ejs"); %>
    <% } %>

    <footer class="bg-primary">
        <div class="container d-flex justify-content-center justify-content-md-between align-items-center">
            <div class="d-flex align-items-center">
                <a href="index.html" class="d-block logo-white mr-6">D'PERFUME</a>
                <p class="copyright text-white font-weight-medium font-size-sm py-8 mb-0">© 2020. All Rights Reserved.</p>
            </div>
            <ul class="nav d-none d-md-flex">
                <li class="nav-item"><a href="products.html" class="nav-link h5 font-weight-normal mb-0 py-4">Product</a></li>
                <li class="nav-item"><a href="#" class="nav-link h5 font-weight-normal mb-0 py-4">Blog</a></li>
                <li class="nav-item"><a href="#" class="nav-link h5 font-weight-normal mb-0 py-4">Contact</a></li>
            </ul>
        </div>
    </footer>

